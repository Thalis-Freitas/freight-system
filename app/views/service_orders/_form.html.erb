
<% if @service_order.errors.any? %>
  <div class="alert alert-warning container" role="alert">
      <b><%= t(:check_the_errors, count: @service_order.errors.count) %>:</b>
    <% @service_order.errors.full_messages.each do |msg| %>
      <div> - <%= msg %>
      </div>
    <% end %>
  </div>
<% end %>

<div class='container'>
  <%= form_with model: @service_order do |f| %>
    <div class="row">
      <div class="mb-2 col-12 col-lg-6">
        <%= f.label :source_address, class:'form-label' %>
        <%= f.text_field :source_address, autofocus: true, class:'form-control' %>
      </div>
    </div>
    <div class="row">
      <div class="mb-2 col-12 col-lg-6">
        <%= f.label :product_code, class:'form-label' %>
        <%= f.text_field :product_code, class:'form-control' %>
      </div>
    </div>
    <div class="row">
      <div class="mb-2 col-6 col-lg-3">
        <%= f.label :height, class:'form-label' %>
        <%= f.number_field :height, class:'form-control' %>
      </div>
      <div class="mb-2 col-6 col-lg-3">
        <%= f.label :width, class:'form-label' %>
        <%= f.number_field :width, class:'form-control' %>
      </div>
    </div>
    <div class="row">
      <div class="mb-2 col-6 col-lg-3">
        <%= f.label :depth, class:'form-label' %>
        <%= f.number_field :depth, class:'form-control' %>
      </div>      
      <div class="mb-2 col-6 col-lg-3">
        <%= f.label :weight, class:'form-label' %>
        <%= f.number_field :weight, class:'form-control' %>
      </div>      
    </div>
    <div class="row">
      <div class="mb-2 col-12 col-lg-6 col-lg-3">
        <%= f.label :destination_address, class:'form-label' %>
        <%= f.text_field :destination_address, class:'form-control' %>
      </div>
    </div>
    <div class="row">
      <div class="mb-2 col-12 col-lg-6 col-lg-3">
        <%= f.label :recipient, class:'form-label' %>
        <%= f.text_field :recipient, class:'form-control' %>
      </div>
    </div>
    <div class="row">
      <div class="mb-2 col-6 col-lg-3">
        <%= f.label :recipient_phone, class:'form-label' %>
        <%= f.number_field :recipient_phone, class:'form-control' %>
      </div>
      <div class="mb-2 col-6 col-lg-3">
        <%= f.label :total_distance, class:'form-label' %>
        <%= f.number_field :total_distance, class:'form-control' %>
      </div>
    </div>
    <div class="mb-2 ">
      <%= f.submit t(:save), class: 'btn btn-primary mt-2' %>
    </div>
  <% end %>
</div>
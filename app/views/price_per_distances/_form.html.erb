<div class="container">
  <h3 class="text-secondary"><%="#{t(:modality).capitalize} #{@mode_of_transport.name}"%></h3>
</div>
<% if @price_per_distance.errors.any? %>
  <div class="alert alert-warning container" role="alert">
    <b><%= t(:check_the_errors, count: @price_per_distance.errors.count) %>:</b>
    <% @price_per_distance.errors.full_messages.each do |msg| %>
      <div> - <%= msg %> </div>
    <% end %>
  </div>
<% end %>

<div class="container">
  <%= form_with model: [@mode_of_transport, @price_per_distance] do |f| %>
    <div class="row">
      <div class="mb-2 col-12 col-lg-6">
        <%= f.label :minimum_distance, class:'form-label' %>
        <%= f.number_field :minimum_distance, class:'form-control' %>
      </div>
    </div>
    <div class="row">
      <div class="mb-2 col-12 col-lg-6">
        <%= f.label :maximum_distance, class:'form-label' %>
        <%= f.number_field :maximum_distance, class:'form-control' %>
      </div>
    </div>
    <div class="row">
      <div class="mb-2 col-12 col-lg-6">
        <%= f.label :rate, "#{PricePerDistance.human_attribute_name(:rate)} (#{t(:in_cents)})", class:'form-label' %>
        <%= f.number_field :rate, class:'form-control' %>
      </div>
    </div>
    <div class="mb-2 ">
      <%= f.submit t(:save), class: 'btn btn-primary mt-2' %>
    </div>
  <% end %>
</div>
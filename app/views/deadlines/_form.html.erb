<div class="container">
  <h3 class="text-secondary"><%="#{t(:modality).capitalize} #{@mode_of_transport.name}"%></h3>
  <% if @deadline.errors.any? %>
    <div class="container" role="alert">
      <b><%= t(:check_the_errors, count: @deadline.errors.count) %>:</b>
      <% @deadline.errors.full_messages.each do |msg| %>
        <div class="alert alert-warning"><%= msg %> </div>
      <% end %>
    </div>
  <% end %>
  <%= form_with model: [@mode_of_transport, @deadline] do |f| %>
    <div class="row">
      <div class="mb-2 col-5 col-lg-2">
        <%= f.label :minimum_distance, class:'form-label' %>
        <%= f.number_field :minimum_distance, class:'form-control' %>
      </div>
      <div class="mb-2 col-5 col-lg-2">
        <%= f.label :maximum_distance, class:'form-label' %>
        <%= f.number_field :maximum_distance, class:'form-control' %>
      </div>
    </div>
    <div class="row">
      <div class="mb-2 col-10 col-lg-4">
        <%= f.label :estimated_time, "#{Deadline.human_attribute_name(:estimated_time)} #{t :in_hours }", class:'form-label' %>
        <%= f.number_field :estimated_time, class:'form-control' %>
      </div>
    </div>
    <div class="mb-2 ">
      <%= f.submit t(:save), class: 'btn btn-primary mt-2' %>
    </div>
  <% end %>
</div>